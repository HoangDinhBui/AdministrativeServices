@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<div class="glass-card auth-container">
    <h2 class="text-center mb-4">Đăng ký tài khoản</h2>
    <form asp-action="Register" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        
        <div class="mb-3">
            <label class="form-label">Họ và tên</label>
            <input name="fullName" class="form-control" placeholder="Nhập họ và tên" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input name="email" type="email" class="form-control" placeholder="example@email.com" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Mật khẩu</label>
            <input name="password" type="password" class="form-control" placeholder="••••••••" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Vai trò</label>
            <select name="role" class="form-select">
                <option value="Citizen">Người dân</option>
                <option value="Official">Cán bộ</option>
                <option value="Chairman">Lãnh đạo (Chủ tịch/Phó chủ tịch)</option>
                <option value="Admin">Quản trị viên</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary w-100 mt-3">Đăng ký</button>
        
        <div class="text-center mt-4">
            <span>Đã có tài khoản? </span>
            <a asp-action="Login" class="text-decoration-none">Đăng nhập ngay</a>
        </div>
    </form>
</div>
