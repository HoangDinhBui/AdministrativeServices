@{
    ViewData["Title"] = "Đăng ký khai sinh";
}

<div class="max-width-800 mx-auto">
    <div class="mb-4">
        <h2 class="fw-bold">Đăng ký khai sinh</h2>
        <p class="text-muted">Vui lòng điền đầy đủ thông tin để đăng ký khai sinh cho con.</p>
    </div>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <input type="hidden" name="serviceTypeId" value="@ViewBag.ServiceId" />
        
        <div class="glass-card p-4 mb-4">
            <h5 class="fw-bold mb-3 border-bottom pb-2">1. Thông tin trẻ</h5>
            <div class="row g-3">
                <div class="col-md-12">
                    <label class="form-label">Họ và tên con</label>
                    <input name="childFullName" class="form-control" placeholder="NGUYỄN VĂN A" required />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Ngày sinh</label>
                    <input name="dateOfBirth" type="date" class="form-control" required />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Giới tính</label>
                    <select name="gender" class="form-select">
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                    </select>
                </div>
                <div class="col-md-12">
                    <label class="form-label">Nơi sinh</label>
                    <input name="placeOfBirth" class="form-control" placeholder="Bệnh viện Phụ sản Hà Nội, quận Đống Đa, Hà Nội" required />
                </div>
            </div>
        </div>

        <div class="glass-card p-4 mb-4">
            <h5 class="fw-bold mb-3 border-bottom pb-2">2. Thông tin Cha</h5>
            <div class="row g-3">
                <div class="col-md-8">
                    <label class="form-label">Họ và tên Cha</label>
                    <input name="fatherName" class="form-control" value="@ViewBag.ParentName" required />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Số CCCD Cha</label>
                    <input name="fatherCCCD" class="form-control" value="@ViewBag.ParentCCCD" placeholder="012345678901" required />
                </div>
            </div>
        </div>

        <div class="glass-card p-4 mb-4">
            <h5 class="fw-bold mb-3 border-bottom pb-2">3. Thông tin Mẹ</h5>
            <div class="row g-3">
                <div class="col-md-8">
                    <label class="form-label">Họ và tên Mẹ</label>
                    <input name="motherName" class="form-control" required />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Số CCCD Mẹ</label>
                    <input name="motherCCCD" class="form-control" placeholder="012345678901" required />
                </div>
            </div>
        </div>

        <div class="glass-card p-4 mb-4">
            <h5 class="fw-bold mb-3 border-bottom pb-2">4. Hồ sơ đính kèm</h5>
            <p class="small text-muted mb-3">Tải lên: Giấy chứng sinh, Giấy đăng ký kết hôn (nếu có), CCCD cha/mẹ...</p>
            <div class="mb-3">
                <input type="file" name="files" multiple class="form-control" accept=".pdf,.jpg,.jpeg,.png" />
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-5">
            <a asp-controller="Citizen" asp-action="Applications" class="btn btn-link text-muted">Hủy bỏ</a>
            <button type="submit" class="btn btn-primary px-5">Nộp hồ sơ</button>
        </div>
    </form>
</div>

<style>
    .max-width-800 { max-width: 800px; }
</style>
