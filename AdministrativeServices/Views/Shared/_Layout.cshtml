<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dịch Vụ Công</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light mb-4 py-3">
            <div class="container">
                <a class="navbar-brand fw-bold text-primary" asp-controller="Home" asp-action="Index">GATEWAY</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            if (User.IsInRole("Citizen"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Citizen" asp-action="Applications">Hồ sơ của tôi</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Citizen" asp-action="Wallet">Ví giấy tờ</a>
                                </li>
                            }
                            else if (User.IsInRole("Official"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Official" asp-action="Inbox">Xử lý hồ sơ</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Official" asp-action="Search">Tra cứu</a>
                                </li>
                            }
                            else if (User.IsInRole("Chairman"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Chairman" asp-action="Queue">Phê duyệt & Ký số</a>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle fw-medium" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    Chào, @(User.Identity.Name)
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end glass-card border-0 shadow-sm">
                                    <li><a class="dropdown-item" href="#">Thông tin cá nhân</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item text-danger">Đăng xuất</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-medium" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary ms-lg-2" asp-controller="Account" asp-action="Register">Tham gia ngay</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted py-4 mt-5">
        <div class="container text-center">
            &copy; 2025 - Hệ thống Quản lý Dịch vụ Hành chính - <a asp-area="" asp-controller="Home" asp-action="Privacy">Quyền riêng tư</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
